<% layout("/layouts/boilerplate") %>
<body>
  <%= success %>

  <!-- <form action="listings/new" method="GET">
        <button>reate new listing</button>
    </form> -->
  <style>
    #filters {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
    }

    .filter {
      text-align: center;
      margin: 1rem;
      width: 70px;
    }
    .filter a {
      text-decoration: none;
      color: black;
    }
    .filter img{
      height: 40px;

    }
  
    .filter p{
      font-size: small;

    }
    .filter:hover {
      opacity: 1;
      cursor: pointer;
      text-decoration: underline;
    }
    .tax-info {
      display: none;
    }
    .tax-toggle {
      border: 1px solid black;
      border-radius: 1rem;
      height: 3.5rem;
      padding: 1rem;
      margin-left: 5rem;
    }
  </style>
  <div id="filters">
    <div class="filter">
      <a href="/listings"
        ><div><img src="/carLogo/image.png" alt=""></div>
        <p>All</p></a
      >
    </div>
    <div class="filter">
      <a href="/listings?company=BMW"
        ><div><img src="/carLogo/bmw.png" alt=""></div>
        <p>BMW</p></a
      >
    </div>

    <div class="filter">
      <a href="/listings?company=Mercedes-Benz"
        ><div><img src="/carLogo/mer.png" alt=""></div>
        <p>Mercedes</p></a
      >
    </div>
    <div class="filter">
      <a href="/listings?company=Volkswagen"
        ><div><img src="/carLogo/vw.png" alt=""></i></div>
        <p>Volkswagen</p></a
      >
    </div>
    <div class="filter">
      <a href="/listings?company=TATA"
        ><div><img src="/carLogo/tata.png" alt=""></div>
        <p>TATA</p></a
      >
    </div>

    <div class="filter">
      <a href="/listings?company=KIA"
        ><div><img src="/carLogo/kia.png" alt=""></div>
        <p>KIA</p></a
      >
    </div>

    <div class="filter">
      <a href="/listings?company=Mahindra"
        ><div><img src="/carLogo/mahindra.png" alt=""></div>
        <p>Mahindra</p></a
      >
    </div>
    <div class="filter">
      <a href="/listings?company=Tesla"
        ><div><img src="/carLogo/tesla.png" alt=""></div>
        <p>Tesla</p></a
      >
    </div>

    <div class="filter">
      <a href="/listings?company=Skoda"
        ><div><img src="/carLogo/skoda.png" alt=""></div>
        <p>Skoda</p></a
      >
    </div>

    <div class="filter">
      <a href="/listings?company=Hyundai"
        ><div><img src="/carLogo/hundai.png" alt=""></div>
        <p>Hyundai</p></a
      >
    </div>

  </div>
  <hr />
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
    <% for(let listing of allListings){ %>
    <a href="/listings/<%= listing._id %>">
      <div class="card col card-listing custom-card">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="listing_image"
          style="height: 20rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b> <br />
            &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") :
            "N/A" %> /hr
            <i class="tax-info"> &nbsp; &nbsp;+18% GST</i>
          </p>
        </div>
      </div></a
    >
    <% } %>
  </div>

  <script>
    let taxSwitch = document.getElementById("switchCheckDefault");
    taxSwitch.addEventListener("click", () => {
      let taxinfo = document.getElementsByClassName("tax-info");
      for (info of taxinfo) {
        if (info.style.display !== "inline") {
          info.style.display = "inline";
        } else {
          info.style.display = "none";
        }
      }
    });
  </script>
</body>
